{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "ES2015",
      "ES2016",
      "DOM"
    ],
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "types": ["node", "mocha"],
  },
  "include": ["src/**/*.ts", "tests/**/*.spec.ts", "ormconfig.ts", "swagger/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
